{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "conversations": {
      "type": "application",
      "root": "apps/conversations",
      "entryFile": "main",
      "sourceRoot": "apps/conversations/src",
      "compilerOptions": {
        "tsConfigPath": "apps/conversations/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "webhook": {
      "type": "application",
      "root": "apps/webhook",
      "entryFile": "main",
      "sourceRoot": "apps/webhook/src",
      "compilerOptions": {
        "tsConfigPath": "apps/webhook/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/api-gateway"
}